@{
}
@model FanFan.Models.FanFictionPost
<div class="container">
    <div id="fanfic">
        <div class="row">
            <div class="col-11 col-md-12 bg-secondary shadow p-3 mb-5 bg-white rounded m-2">
                <div class="row justify-content-center">
                    <img class="img-fluid" style="max-width:1110px; max-height: 625px;" src=@ViewBag.Post.Picture>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-11 col-md-12 bg-secondary shadow p-3 mb-5 bg-white rounded m-2">
                <div class="row">
                    <div class="col-9">
                        <h1 class="display-5">@ViewBag.Post.Name</h1>
                    </div>
                </div>
                <h5>
                    <a class="text-dark text-decoration-none" href="#">
                        <img class="rounded-circle im_nav_avatar_photo" src=@ViewBag.Post.AppUser.PhotoUser>
                        <span class="font-weight-bold">@ViewBag.Post.AppUser.UserName</span>
                    </a>
                </h5>
                <br class="breadcrumb">
                <div>
                    <h4 class="disabley-5">Фэндом :</h4>
                    <a class="badge badge-info">@ViewBag.Post.Fandom.Name</a>
                </div>
                
                <br class="breadcrumb">
                <div>
                    <h4 class="disabley-5">Описание :</h4>
                    <p class="text-md-left">@ViewBag.Post.ShortDescription</p>
                </div>
            </div>
        </div>
        <div class="col-10 col-md-5">
            <h2 class="display-5">Редактирование фанфика</h2>
            <form enctype="multipart/form-data" method="post" asp-action="EditPost" asp-controller="FanFiction" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <br class="breadcrumb">

                <input type="hidden" asp-for="Id" value=@ViewBag.Post.Id/>
                <div class="form-group">
                    <label asp-for="Name">Введите название</label><br />
                    <input type="text" asp-for="Name" class="form-control" aria-describedby="emailHelp" placeholder=@ViewBag.Post.Name>
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label asp-for="ShortDescription">Описание</label>
                    <textarea type="text" asp-for="ShortDescription" class="form-control" id="exampleFormControlTextarea1" placeholder=@ViewBag.Post.ShortDescription></textarea>
                    <span asp-validation-for="ShortDescription" />
                    @Html.ValidationMessageFor(model => model.ShortDescription, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label asp-for="FandomId">Фендом</label>
                    <select size="1" name="FandomId" class="form-control">
                        @foreach (var item in ViewBag.AllFandoms)
                        {
                            <option value="@Convert.ToInt32(item.Id)">@item.Name</option>
                        }
                    </select>
                </div>
                
                <button type="submit" class="btn btn-primary">Обновить</button>
               
            </form>

        </div>
    </div>
</div>