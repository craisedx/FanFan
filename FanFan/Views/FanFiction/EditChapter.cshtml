@{
}
@model FanFan.Models.Chapter

            <h3>@ViewBag.Chapter.Name</h3>
            <p>@Html.Raw(@ViewBag.Chapter.ChapterText)</p>
            <div class="row justify-content-center">
                <img class="img-fluid" style="max-width:1110px; max-height: 625px;" src=@ViewBag.Chapter.Picture />
            </div>
        
   
<h2 class="display-5">Редактирование главы</h2>
<form enctype="multipart/form-data" method="post" asp-action="EditChapter" asp-controller="FanFiction" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for="Id" value=@ViewBag.Chapter.Id />
    <input type="hidden" asp-for="FanFictionPostId" value=@ViewBag.Chapter.FanFictionPostId />
    <br class="breadcrumb">
    <div class="form-group">
        <label asp-for="Name">Введите название</label>
        <input type="text" asp-for="Name" class="form-control"  placeholder=@ViewBag.Chapter.Name>
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label asp-for="ChapterText">Текст</label>
        <textarea type="text" asp-for="ChapterText" class="form-control"  placeholder=@ViewBag.Chapter.ChapterText></textarea>
        <span asp-validation-for="ChapterText" />
        @Html.ValidationMessageFor(model => model.ChapterText, "", new { @class = "text-danger" })
    </div>
    
    <button type="submit" class="btn btn-primary">Изменить</button>
   
</form>