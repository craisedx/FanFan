@model FanFan.Models.LoginModel
@{ 
    var emailerror = TempData["EmailError"] as string;
}
<h2>Вход на сайт</h2>
@if (!string.IsNullOrEmpty(emailerror)) 
{ 
    <h2 class="alert-danger" style="padding:20px">@emailerror</h2>
}
<a asp-action="Register" asp-controller="Account">Регистрация</a>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="UserName">Введите имя</label>
            @Html.EditorFor(model => model.UserName, "", new { @class = "bg-danger" })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label asp-for="Password">Введите пароль</label>
            @Html.EditorFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
        @Html.ValidationMessage("CheckLogin", new { @class = "text-danger" })
        <div class="form-group">
            <input type="submit" value="Войти"/>
        </div>
    </div>
</form>